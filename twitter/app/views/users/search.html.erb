<h1>Search!</h1>

<nav class="users-search">

  <label>
    Username
    <input type="text" name="user[username]" value="">
  </label>

  <ul class="users">
    <% @users.each do |user| %>
      <li>
        <a href="<%= user_url(user) %>"><%= user.username %></a>
        <%= render 'follows/form', user: user %>
      </li>
    <% end %>
  </ul>

</nav>
